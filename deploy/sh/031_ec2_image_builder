#!/bin/bash

# Code generated by gen/template/plat::deployscript.sh.jinja; DO NOT EDIT.

set -euo pipefail -o posix

cd "$(dirname "$0")/../../"

. deploy-script-header.sh

template_file="./deploy/cfn/${template_name}"

SubnetPriAppA=$(cfn-get-export SubnetPriAppA --prefix)
SecurityGroupK8sWorker=$(cfn-get-export SecurityGroupK8sWorker --prefix)
BucketScript=$(cfn-get-export BucketScript --prefix)
BucketBackup=$(cfn-get-export BucketBackup --prefix)
BucketImageBuilder=$(cfn-get-export BucketImageBuilder --prefix)
LaunchTemplateApp=$(cfn-get-export LaunchTemplateApp --prefix)

sam validate --template-file "${template_file}"
optwait cfn stack "${stack_name}"
sam deploy \
    --template-file "${template_file}" \
    --stack-name "${stack_name}" \
    --capabilities CAPABILITY_NAMED_IAM \
    --resolve-s3 \
    --no-fail-on-empty-changeset \
    --on-failure DELETE \
    --parameter-overrides "\
Prefix=\"${OP_PREFIX}\" \
Env=\"${OP_ENV}\" \
SubnetPriAppA=\"${SubnetPriAppA}\" \
SecurityGroupK8sWorker=\"${SecurityGroupK8sWorker}\" \
BucketScript=\"${BucketScript}\" \
BucketBackup=\"${BucketBackup}\" \
BucketImageBuilder=\"${BucketImageBuilder}\" \
LaunchTemplateApp=\"${LaunchTemplateApp}\" \
"
